<view class='wrap'>
  <view class='read' catchtap='toFreeRead'>
    <view class='container-function'>
      <view class='container-function-icon'>
        <image class='function-icon' src='/images/icon/icon_free_read.png'></image>
      </view>
      <view class='container-function-text'>
        <view class='function-title'>自由朗读</view>
        <view class='function-text'>录制自定义内容朗读</view>
      </view>

    </view>
    <image class='bg-function' src='/images/background/bg_free_read.png'></image>
  </view>

  <view class='container-category'>

    <block wx:for="{{tList}}" wx:key="key" wx:for-item="item">

      <view class='container-category-item' catchtap='clickCategoryItem' data-tid="{{item.typeId}}" data-name="{{item.typeName}}" data-path="{{item.img}}">
        <view class='container-category-cover'>
          <block wx:if="{{item.img}}">
            <image class='category-cover' src='{{tPath}}{{item.img}}'></image>
          </block>
          <block wx:else>
            <image class='category-cover' src='/images/icon/icon_default_type.png'></image>
          </block>
        </view>
        <view class='category-title'>{{item.typeName}}</view>
      </view>

    </block>



  </view>

</view>


