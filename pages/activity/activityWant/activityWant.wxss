@import "../../../template/titlebar/titlebar.wxss";

page {
  background: #f5f5f9;
  
}

.backpress {
  width: 22rpx;
  height: 38rpx;
  position: fixed;
  top: 66rpx;
  left: 32rpx;
  z-index: 100;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
 /* margin-top: 128rpx; */
}

.read {
  width: 100%;
  height: 156rpx;
  margin-bottom: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  
}

.bg-function {
  width: 100%;
  height: 100%;
}

.container-function {
  width: 70%;
  height: 156rpx;
  position: absolute;
  left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container-function-icon {
  width: 18%;
  height: 100%;
  line-height: 218rpx;
}

.function-icon {
  width: 76rpx;
  height: 82rpx;
}

.container-function-text {
  width: 50%;
  height: 82rpx;
  display: flex;
  flex-direction: column;
}

.function-title {
  width: 100%;
  height: 50%;
  font-size: 30rpx;
  color: #333;
}

.function-text {
  width: 100%;
  height: 50%;
  font-size: 26rpx;
  color: #999;
}

.container-category {
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  
  
}

.container-category-item{
  width:20%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.container-category-cover{
  width: 110rpx;
  height: 110rpx;
  margin-top: 30rpx;
  
}

.category-cover{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.category-title{
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  color: #222222;
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  

}


.footer-mine{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 230rpx;
  background: #FFFFFF;
}

.container-search-item {
  width: 92%;
  height: 230rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container-article-cover {
  width: 18%;
  height: 170rpx;
  border-radius: 6rpx;
  margin-right: 2%;
  margin-left: 30rpx;
}

.container-article {
  width: 68%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container-article-title{
  width: 94%;
  height: 52%;
  line-height: 170rpx;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.container-article-author {
  width: 100%;
  height: 48%;
  font-size: 26rpx;
  color: #999;
}

.container-collect{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 12rpx;
}

.collect-number{
  width: auto;
  height: 100%;
  line-height: 230rpx;
  font-size: 30rpx;
  color: #AAAAAA;
  text-align: center;
}

.icon-collect{
  width: 30rpx;
  height: 30rpx;
}

.container-status{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: fixed;
  bottom: 180rpx;
  right: 0rpx;
  background: #6292FF;
  color: #FFFFFF;
  font-size: 26rpx;
  text-align: center;

}


