@import "../../../template/titlebar/titlebar.wxss";

page {
  background: #f5f5f9;
  
}

.backpress {
  width: 22rpx;
  height: 38rpx;
  position: fixed;
  top: 66rpx;
  left: 32rpx;
  z-index: 100;
}




.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
 /* margin-top: 128rpx; */
}

.read-free{
  width: 300rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  font-size: 30rpx;
  color: #6292FF;
  background: #FFFFFF;
  border-radius: 10rpx;
  position: fixed;
  bottom: 70rpx;
}


.container-category {
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  
  
}

.container-category-item{
  width:20%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.container-category-cover{
  width: 110rpx;
  height: 110rpx;
  margin-top: 30rpx;
  
}

.category-cover{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.category-title{
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  color: #222222;
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  

}




