.container-activityShare {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 文章信息 */

.container-text {
  width: 100%;
  height: 330rpx;
  /* display: flex;
  flex-direction: column;
  align-items: center;
  background: #6292FF; */
}



/* 读者信息 */

.container-reader {
  width: 94%;
  height: 120rpx;
  border-bottom: solid #ededed 2rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.reader-name {
  width: 70%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #666;
  margin-left: 2%;
  overflow: hidden;
}

.reader-share{
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #ffffff;
  background: #6292FF;
  text-align: center;
  border-radius: 10rpx;
}

/* 音频播放 */

.play {
  width: 100%;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pg-play {
  width: 92%;
  height: 2rpx;
  margin-top: 60rpx;
}

.container-play-time {
  width: 92%;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.play-time {
  width: 90%;
  height: 30rpx;
  font-size: 24rpx;
  color: #888;
}

.play-total {
  width: 8%;
  height: 30rpx;
  font-size: 24rpx;
  color: #888;
}

.container-ope{
  width: 96%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}

.ranking{
  width: 41%;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ranking-item{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  color: #888;
  text-align: center;
  font-size: 46rpx;
  margin-bottom: 2rpx;
}

.ranking-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 1%;
}



.btn-play{
  width: 16%;
  height: 110rpx;
  line-height: 124rpx;
  background: #6292FF;
  text-align: center;
  border-radius: 6rpx;
}

.btn-play-icon{
  width:40rpx;
  height: 40rpx;
}

.title-list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-top: solid #ededed 2rpx;
  border-bottom: solid #ededed 2rpx;
  margin-top: 10rpx;
  font-size: 36rpx;
  
}

.list-item{
  width: 100%;
  height: 130rpx;
  border-bottom: solid #ededed 2rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list-item-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-left: 2%;
  margin-right: 2%;
}

.list-item-title{
  width: 72%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  
}

.list-item-article{
  width: 100%;
  height: 60rpx;
  font-size: 34rpx;
  overflow: hidden;
}

.list-item-reader{
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  color: #888;
  overflow: hidden;
}

.list-vote{
  width: 13%;
  height: 130rpx;
  line-height: 130rpx;
  font-size: 32rpx;
  color: #888;
}


