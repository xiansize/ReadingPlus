@import "../../../template/titlebar/titlebar.wxss";

page {
  background: #f5f5f9;
}

.backpress {
  width: 22rpx;
  height: 38rpx;
  position: fixed;
  top: 66rpx;
  left: 32rpx;
  z-index: 100;
}

.read {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #6292ff;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  position: fixed;
  bottom: 0rpx;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin-top: 128rpx; */
}

.cover {
  width: 100%;
  height: 390rpx;
}

.middle {
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: solid #ddd 2rpx;
}

.activity-title {
  width: 92%;
  color: #222;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.container-msg {
  width: 92%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.activity-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.activity-msg {
  width: 90%;
  height: 100%;
  color: #999;
  font-size: 30rpx;
}

.container-views {
  width: 92%;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}

.container-likes {
  width: 48%;
  height: 100%;
  background: #f4f4f4;
  border-radius: 2rpx;
}

.right {
  margin-right: 2%;
}

.left {
  margin-left: 2%;
}

.likes {
  width: 100%;
  height: 50%;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.likes-name {
  line-height: 64rpx;
}

.nav {
  width: 100%;
  height: 90rpx;
  background: #fff;
  border-bottom: solid #ddd 2rpx;
  display: flex;
  flex-direction: row;
}

.nav-item {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-name {
  width: 50%;
  height: 90%;
  line-height: 90rpx;
  text-align: center;
  color: #6292ff;
  font-size: 28rpx;
}

.nav-ind {
  width: 30rpx;
  height: 10%;
  background: #6292ff;
  border-radius: 2rpx;
}

.container-detail {
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 90rpx;
}

.detail {
  width: 92%;
  height: 100%;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  font-size: 30rpx;
  color: #666;
  background: #fff;
  margin-top: 20rpx;
}





.search {
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-search {
  width: 92%;
  height: 64rpx;
  background: #f4f4f4;
  border-radius: 6rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon-search{
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.search-input{
  width: 76%;
  height: 30rpx;
  color: #333333;
  font-size: 26rpx;
}



.contaienr-back {
  width: 92%;
  height: 66rpx;
  line-height: 64rpx;
  color: #999;
  font-size: 26rpx;
}

.container-search-item {
  width: 92%;
  height: 230rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container-article-cover {
  width: 18%;
  height: 170rpx;
  border-radius: 6rpx;
  margin-right: 2%;
}

.container-article {
  width: 68%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container-article-title{
  width: 94%;
  height: 52%;
  line-height: 170rpx;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.container-article-author {
  width: 100%;
  height: 48%;
  font-size: 26rpx;
  color: #999;
}

.container-collect{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.collect-number{
  width: auto;
  height: 100%;
  line-height: 230rpx;
  font-size: 30rpx;
  color: #AAAAAA;
  text-align: center;
  margin-left: 2rpx;
}

.icon-collect{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.border{
  width: 100%;
  height: 20rpx;
  background: #f5f5f9;
}
