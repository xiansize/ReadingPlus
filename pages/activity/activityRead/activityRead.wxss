@import "../../../template/titlebar/titlebar.wxss";

page {
  background: #f5f5f9;
}

.backpress {
  width: 22rpx;
  height: 38rpx;
  position: fixed;
  top: 66rpx;
  left: 32rpx;
  z-index: 100;
}

.read {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #6292ff;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  position: fixed;
  bottom: 0rpx;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin-top: 128rpx; */
}

.cover {
  width: 100%;
  height: 390rpx;
}

.middle {
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: solid #ddd 2rpx;
}

.activity-title {
  width: 92%;
  color: #222;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.container-msg {
  width: 92%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.activity-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.activity-msg {
  width: 70%;
  height: 100%;
  color: #999;
  font-size: 30rpx;
}

.activity-timeup {
  width: 20%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: red;
  border-radius: 10rpx;
  text-align: center;
}

.container-views {
  width: 92%;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}

.container-likes {
  width: 48%;
  height: 100%;
  background: #f4f4f4;
  border-radius: 2rpx;
}

.right {
  margin-right: 2%;
}

.left {
  margin-left: 2%;
}

.likes {
  width: 100%;
  height: 50%;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.likes-name {
  line-height: 64rpx;
}

.nav {
  width: 100%;
  height: 90rpx;
  background: #fff;
  border-bottom: solid #ddd 2rpx;
  display: flex;
  flex-direction: row;
}

.nav-item {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-name {
  width: 50%;
  height: 90%;
  line-height: 90rpx;
  text-align: center;
  color: #6292ff;
  font-size: 28rpx;
}

.nav-ind {
  width: 30rpx;
  height: 10%;
  background: #6292ff;
  border-radius: 2rpx;
}

.container-detail {
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 90rpx;
}

.detail {
  width: 92%;
  height: 100%;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  font-size: 30rpx;
  color: #666;
  background: #fff;
  margin-top: 20rpx;
}

.search {
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-search {
  width: 92%;
  height: 64rpx;
  background: #f4f4f4;
  border-radius: 6rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon-search {
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.search-input {
  width: 76%;
  height: 30rpx;
  color: #333;
  font-size: 26rpx;
}

.contaienr-back {
  width: 92%;
  height: 66rpx;
  line-height: 64rpx;
  color: #999;
  font-size: 26rpx;
}

.container-search-item {
  width: 92%;
  height: 230rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container-article-cover {
  width: 18%;
  height: 170rpx;
  border-radius: 6rpx;
  margin-right: 2%;
}

.container-article {
  width: 68%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container-article-title {
  width: 94%;
  height: 52%;
  line-height: 170rpx;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.container-article-author {
  width: 100%;
  height: 48%;
  font-size: 26rpx;
  color: #999;
}

.container-collect {
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.collect-number {
  width: auto;
  height: 100%;
  line-height: 230rpx;
  font-size: 30rpx;
  color: #aaa;
  text-align: center;
  margin-left: 2rpx;
}

.icon-collect {
  width: 30rpx;
  height: 30rpx;
  
}

.border {
  width: 100%;
  height: 20rpx;
  background: #f5f5f9;
}

.container-readerinfo {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  top: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-input-phone {
  width: 84%;
  height: 320rpx;
  margin-top: 300rpx;
  background: #f5f5f9;
  border-radius: 6rpx;
}

.input-tips {
  width: 94%;
  margin-left: 6%;
  height: 50rpx;
  color: #6292ff;
  font-size: 34rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.input-phone {
  width: 90%;
  margin-left: 6%;
  height: 60rpx;
  border-bottom: solid #6292ff 2rpx;
  
}



.btn-phone{
  width: 36%;
  height: 70rpx;
  line-height: 70rpx;
  color: #f5f5f9;
  background: #6292ff;
  text-align: center;
  border-radius: 8rpx;
  margin-top: 50rpx;
  margin-left: 6%;
  font-size: 30rpx;
}


.title-record{
  width: 92%;
  height: 46rpx;
  line-height: 46rpx;
  border-bottom: solid 2rpx #dddddd;
  font-size: 26rpx;
  
}
