page {
  background: #f5f5f9;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-more {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.container-search-item {
  width: 100%;
  height: 230rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: solid 1rpx #DDDDDD;
}

.container-article-cover {
  width: 18%;
  height: 170rpx;
  border-radius: 6rpx;
  margin-right: 2%;
  margin-left: 2%;
}

.container-article {
  width: 92%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container-article-title {
  width: 100%;
  height: 52%;
  line-height: 170rpx;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.container-article-author {
  width: 100%;
  height: 48%;
  font-size: 26rpx;
  color: #999;
}

.container-collect {
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.collect-number {
  width: auto;
  height: 100%;
  line-height: 230rpx;
  font-size: 30rpx;
  color: #aaa;
  text-align: center;
  margin-left: 2rpx;
}

.icon-collect {
  width: 30rpx;
  height: 30rpx;
  
}