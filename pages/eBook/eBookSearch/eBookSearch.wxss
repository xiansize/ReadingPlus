page {
  background: #eee;
}

.container-search {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-input {
  width: 100%;
  height: 100rpx;
  background: #6292ff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title-input-container {
  width: 96%;
  height: 64rpx;
  border-radius: 6rpx;
  background: white;
}

.title-input {
  width: 600rpx;
  height: 64rpx;
  margin-left: 30rpx;
  font-size: 26rpx;
}

.input-hint {
  color: #ccc;
  font-size: 26rpx;
}

.container-search-value {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*item*/

.container-search-value-item {
  width: 100%;
  height: 230rpx;
  background: white;
  border-radius: 8rpx;
  margin-top: 2rpx;
  margin-bottom: 2rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container-item-img .item-img {
  width: 130rpx;
  height: 170rpx;
  margin-left: 20rpx;
  border-radius: 6rpx;
}

.item-text {
  width: 82%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.item-title {
  font-size: 30rpx;
  color: #222;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 30rpx;
}

.item-author {
  font-size: 26rpx;
  margin-top: 12rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.item-type {
  font-size: 28rpx;
  margin-top: 2rpx;
  margin-left: 20rpx;
  color: #777;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.container-load {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

/*modal  */

.container-modal {
  width: 84%;
  height: 630rpx;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 12rpx;
}

.container-modal-img {
  width: 120rpx;
  height: 153rpx;
  margin-left: 30rpx;
}

.modal-img {
  width: 110rpx;
  height: 153rpx;
  border-radius: 6rpx;
}

.container-search-value-modal {
  width: 100%;
  height: 180rpx;
  background: white;
  border-radius: 8rpx;
  margin-top: 20rpx;
  margin-bottom: 4rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container-summary {
  width: 86%;
  height: 272rpx;
  font-size: 26rpx;
  color: #777;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 8;
  -webkit-box-orient: vertical;
}

.item-modal-text {
  width: 82%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.item-modal-title {
  font-size: 30rpx;
  color: #222;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 16rpx;
}

.item-modal-text-detail {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* dialog */

.container-dialog-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  top: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.dialog-cotainer-btn {
  width: 86%;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.dialog-btn-listen {
  width: 40%;
  height: 66rpx;
  line-height: 66rpx;
  background: #f3b59b;
  text-align: center;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin-left: 10%;
  color: #fff;
}

.dialog-btn-read {
  width: 40%;
  height: 66rpx;
  line-height: 66rpx;
  background: #6292ff;
  text-align: center;
  font-size: 30rpx;
  border-radius: 8rpx;
  color: #fff;
  margin-right: 10%;
}
