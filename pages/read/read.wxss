@import "../../template/titlebar/titlebar.wxss";


page{
  background: #f5f5f9;
  
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin-top: 128rpx; */
  
}

.mine {
  width: 100%;
  height: 136rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mine-collect {
  width: 50%;
  height: 100%;
  line-height: 136rpx;
  border: solid #ddd 0.6px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mine-collect-text {
  width: 60%;
  height: 100%;
  line-height: 136rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

.mine-img-container {
  width: 38%;
  height: 100%;
  line-height: 160rpx;
  text-align: right;
  margin-right: 2%;
}

.mine-img {
  width: 46rpx;
  height: 46rpx;
}

.mine-read-img {
  width: 46rpx;
  height: 54rpx;
}

.list {
  width: 100%;
  height: 110rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list-reader-title {
  width: 72%;
  height: 100%;
  line-height: 110rpx;
  font-size: 30rpx;
  color: #333;
  margin-left: 30rpx;
}

.container-avatar {
  width: 28%;
  height: 100%;
  display: flex;
}

.container-champion {
  position: absolute;
  left: 67%;
  width: 64rpx;
  height: 110rpx;
  line-height: 50rpx;
  z-index: 110;
}

.champion-img {
  width: 38rpx;
  height: 32rpx;
}

.avatar {
  position: absolute;
  left: 68%;
  width: 64rpx;
  height: 110rpx;
  line-height: 150rpx;
}

.one-avatar {
  left: 68%;
  z-index: 100;
}

.two-avatar {
  left: 74%;
  z-index: 50;
}

.three-avatar {
  left: 80%;
}

.one-img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
}

.container-click-to {
  width: 10%;
  height: 100%;
  line-height: 116rpx;
  text-align: center;
}

.img-click-to {
  width: 16rpx;
  height: 28rpx;
}

.read {
  width: 100%;
  height: 156rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.bg-function {
  width: 100%;
  height: 100%;
}

.container-function {
  width: 70%;
  height: 156rpx;
  position: absolute;
  left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container-function-icon {
  width: 18%;
  height: 100%;
  line-height: 218rpx;
}

.function-icon {
  width: 76rpx;
  height: 82rpx;
}

.container-function-text {
  width: 50%;
  height: 82rpx;
  display: flex;
  flex-direction: column;
}

.function-title {
  width: 100%;
  height: 50%;
  font-size: 30rpx;
  color: #333;
}

.function-text {
  width: 100%;
  height: 50%;
  font-size: 26rpx;
  color: #999;
}
