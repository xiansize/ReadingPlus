@import "../../../template/titlebar/titlebar.wxss";

page {
  background: #f5f5f9;
}

.backpress {
  width: 22rpx;
  height: 38rpx;
  position: fixed;
  top: 66rpx;
  left: 32rpx;
  z-index: 100;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin-top: 128rpx; */
}

.item{
  width: 100%;
  height: 140rpx;
  background: #FFFFFF;
  border-bottom: solid #DDDDDD 2rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mine{
  margin-bottom: 20rpx;
}

.cover{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.name{
  width: 30%;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 30rpx;
  color: #222222;
}

.container-number {
  display: inline-block;
  width: auto;
  height: 52rpx;
  line-height:52rpx;
  max-width: 100rpx;
  min-width: 52rpx;
  margin: 100rpx;
  text-align: center;
  background: #E5E5E5;
  border-radius: 52rpx;
  padding: 6rpx;
  color: #222222;
}

.container-collect{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.collect-number{
  width: auto;
  height: 100%;
  line-height: 140rpx;
  font-size: 30rpx;
  color: #AAAAAA;
  text-align: center;
  margin-left: 4rpx;
}

.icon-collect{
  width: 30rpx;
  height: 30rpx;
}