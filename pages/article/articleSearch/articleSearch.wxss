

page {
  background: #f5f5f9;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.backpress {
  width: 22rpx;
  height: 38rpx;
  position: fixed;
  top: 66rpx;
  left: 32rpx;
  z-index: 100;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin-top: 128rpx; */
}

.contaienr-input {
  width: 100%;
  height: 104rpx;
  display: flex;
}

.container-input-text {
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  width: 690rpx;
  height: 64rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 6rpx;
}

.icon-search {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.input-search-title {
  width: 560rpx;
  height: 32rpx;
  font-size: 32rpx;
  color: #222;
}

.input-hint {
  color: #ccc;
}

.icon-clear {
  width: 32rpx;
  height: 32rpx;
}

.bg-input {
  width: 100%;
  height: 100%;
}

.list-search {
  width: 100%;
  height: 90rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-bottom: solid 1rpx #ddd;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list-one{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: solid 1rpx #DDDDDD;
  background: #FFFFFF;
  margin-bottom: 20rpx;
}



.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 38rpx;
  margin-right: 10rpx;
}

.category-name {
  width: 50%;
  height: 40rpx;
  font-size: 30rpx;
}

.nav-views {
  width: 33%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-name {
  width: 50%;
  height: 92%;
  line-height: 82rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.nav-item {
  width: 30rpx;
  height: 8%;
  background: #6292ff;
  border-radius: 2rpx;
}

.category-search {
  width: 100%;
  height: 100%;
  white-space: nowrap;
  display: flex;
}

.category-item {
  width: 138rpx;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  display: inline-block;
}



.container-article {
  width: 100%;
  height: 230rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: solid 1rpx #dddddd;
}

.container-number {
  width: 50rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 2%;
}

.number {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 26rpx;
}



.cover-article {
  width: 16%;
  height: 170rpx;
  border-radius: 6rpx;
  margin-left: 4%;
  margin-right: 2%;
}

.article {
  width: 68%;
  height: 100%;
}

.article-title {
  width: 100%;
  height: 50%;
  line-height: 170rpx;
  color: #222;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.article-author {
  width: 100%;
  height: 48%;
  color: #999;
  font-size: 26rpx;
  margin-top: 2%;
}

.loading-more {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
