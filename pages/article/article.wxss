}

.bg {
  width: 100%;
  height: 230rpx;
}

.bg-img {
  width: 100%;
  height: 100%;
}

.container-search {
  width: 690rpx;
  height: 64rpx;
  background: #fff;
  position: absolute;
  top: 20rpx;
  left: 5%;
  border-radius: 6rpx;
  display: flex;
  flex-direction: row;
  z-index: 100;
}

.container-search-img {
  width: 10%;
  height: 100%;
  line-height: 66rpx;
  text-align: center;
}

.search-img {
  width: 26rpx;
  height: 26rpx;
}

.search-hint {
  width: 70%;
  height: 100%;
  line-height: 64rpx;
  color: #ccc;
  font-size: 26rpx;
}

.cotainer-title {
  width: 100%;
  height: 130rpx;
  position: absolute;
  top: 100rpx;
}

.container-text {
  width: 100%;
  height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
  font-weight: bold;
}

.container-slogan {
  width: 100%;
  height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}

.container-category {
  width: 100%;
  height: 406rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  
  
}

.container-category-item{
  width:20%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.container-category-cover{
  width: 110rpx;
  height: 110rpx;
  margin-top: 30rpx;
  
}

.category-cover{
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
}

.category-title{
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  color: #222222;
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  
  

}


.list {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  
}

