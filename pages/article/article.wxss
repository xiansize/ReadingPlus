}

.list-title {
  width: 68%;
  height: 100%;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #222;
}

.view-more {
  width: 20%;
  height: 100%;
  line-height: 90rpx;
  color: #aaa;
  font-size: 28rpx;
  text-align: right;
}

.to-click {
  width: 4%;
  height: 100%;
  line-height: 90rpx;
  text-align: right;
}

.to-img {
  width: 16rpx;
  height: 28rpx;
}

.border {
  width: 92%;
  height: 1rpx;
  background: #ddd;
}

